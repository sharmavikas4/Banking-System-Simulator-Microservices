package com.controllers;

import java.util.List;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.model.Account;
import com.model.dto.AccountCreateRequest;
import com.model.dto.AccountStatusUpdateRequest;
import com.model.dto.BalanceUpdateRequest;
import com.service.impl.AccountService;

import jakarta.validation.Valid;
import jakarta.validation.constraints.NotBlank;
import jakarta.validation.constraints.Pattern;

@RestController
@RequestMapping("/api/account")
public class AccountControllers {
	
	@Autowired
	private AccountService accountService;
	
	private final Logger LOGGER = LoggerFactory.getLogger(AccountControllers.class);
	
	@GetMapping("/{accountNumber}")
	public ResponseEntity<Account> getAccountByAccountNumber(
			@PathVariable
			@NotBlank(message = "Account Number must not be null or only white spaces")
			@Pattern(regexp = "^[A-Z]{3}\\d{4}$",message = "Account number must be three uppercase alphabets followed by four digits")
			String accountNumber
	){
		LOGGER.info("API Request: Fetch account with accountNumber={}", accountNumber);
		Account account = accountService.getAccountByAccountNumber(accountNumber);
		LOGGER.info("API Response: Successfully fetched accountNumber={}", accountNumber);
		return ResponseEntity.ok(account);
	}
	
	@PostMapping
	public ResponseEntity<Account> createAccount(
			@Valid
			@RequestBody
			AccountCreateRequest accountCreateRequest
	){
		LOGGER.info("API Request: Create account for holderName={}", accountCreateRequest.holderName());

		Account account = accountService.createAccount(accountCreateRequest);
		return new ResponseEntity<>(account,HttpStatus.CREATED);
	}
	
	@PutMapping("/{accountNumber}/balance")
	public ResponseEntity<Account> updateAccountBalance(
			@PathVariable
			@NotBlank(message = "Account Number must not be null or only white spaces")
			@Pattern(regexp = "^[A-Z]{3}\\d{4}$",message = "Account number must be three uppercase alphabets followed by four digits")
			String accountNumber,
			
			@Valid
			@RequestBody
			BalanceUpdateRequest balanceUpdateRequest
	){
		Account account = accountService.updateAccountBalance(accountNumber, balanceUpdateRequest);
		return ResponseEntity.ok(account);
	}
	
	@PutMapping("/{accountNumber}/status")
	public ResponseEntity<Account> updateAccountStatus(
			@PathVariable
			@NotBlank(message = "Account Number must not be null or only white spaces")
			@Pattern(regexp = "^[A-Z]{3}\\d{4}$",message = "Account number must be three uppercase alphabets followed by four digits")
			String accountNumber,
			
			@Valid
			@RequestBody
			AccountStatusUpdateRequest accountStatusUpdateRequest
	){
		Account account = accountService.updateAccountStatus(accountNumber, accountStatusUpdateRequest);
		return ResponseEntity.ok(account);
	}
}
