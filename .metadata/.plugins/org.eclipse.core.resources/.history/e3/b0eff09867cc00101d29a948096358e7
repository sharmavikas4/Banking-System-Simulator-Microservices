package com.util.feign;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;

import com.config.CorrelationIdFeignInterceptor;
import com.model.dto.account.AccountTransactionRequest;
import com.model.dto.account.AccountTransactionResponse;

@FeignClient(name="AccountService",path = "/api/account",configuration = CorrelationIdFeignInterceptor.class,fallbackFactory = AccountServiceFallback.class)
public interface AccountServiceClient {
	
	@PutMapping("/{accountNumber}/balance")
	AccountTransactionResponse updateBalance(@PathVariable String accountNumber,@RequestBody AccountTransactionRequest accountTransactionRequest);

}
