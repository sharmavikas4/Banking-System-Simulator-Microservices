package com.service.impl;

import java.util.Optional;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.exceptions.AccountNotFoundException;
import com.exceptions.DatabaseException;
import com.exceptions.SameAccountStatusException;
import com.model.Account;
import com.model.dto.AccountCreateRequest;
import com.model.dto.AccountStatusUpdateRequest;
import com.model.dto.BalanceUpdateRequest;
import com.model.dto.InsufficientBalanceException;
import com.repository.AccountRepository;
import com.service.AccountServiceInterface;
import com.util.account.GenerateAccountNumber;
import com.util.enums.Status;
import com.util.enums.UpdateType;

@Service
public class AccountService implements AccountServiceInterface {
	
	@Autowired
	private AccountRepository accountRepository;
	
	private final Logger LOGGER = LoggerFactory.getLogger(AccountRepository.class);
	@Override
	public Account getAccountByAccountNumber(String accountNumber) {
		LOGGER.info("Fetching account details for accountNumber={}", accountNumber);
		Optional<Account> account;
		try {
			account = accountRepository.findByAccountNumber(accountNumber);
		}catch (Exception e) {
			LOGGER.error("Database error while fetching accountNumber={}", accountNumber, e);
			throw new DatabaseException(e.getMessage());
		}
		if(account.isEmpty()) {
			LOGGER.warn("No account found for accountNumber={}", accountNumber);
			throw new AccountNotFoundException("No account found for accountNumber= " + accountNumber);
		}
		LOGGER.info("Successfully fetched accountNumber={}", accountNumber);
		return account.get();
	}

	@Override
	public Account createAccount(AccountCreateRequest accountCreateRequest) {
		LOGGER.info("Creating new account for holderName={}", accountCreateRequest.holderName());
		Account account = new Account();
		account.setAccountNumber(accountCreateRequest.holderName());
		account.setBalance(0);
		account.setAccountNumber(GenerateAccountNumber.generate(accountCreateRequest.holderName()));
		LOGGER.debug("Generated accountNumber={} for holderName={}", account.getAccountNumber(), account.getHolderName());
		account.setStatus(Status.ACTIVE);
		Account savedAccount;
		try {
			savedAccount = accountRepository.save(account);
		}catch (Exception e) {
			LOGGER.error("Database error while saving account for holderName={}", accountCreateRequest.holderName(), e);
			throw new DatabaseException(e.getMessage());
		}
		LOGGER.info("Account created successfully. accountNumber={}", savedAccount.getAccountNumber());
		return savedAccount;
	}

	@Override
	public Account updateAccountBalance(String accountNumber, BalanceUpdateRequest balanceUpdateRequest) {
		LOGGER.info("Updating balance for accountNumber={}, amount={}, updateType={}",accountNumber, balanceUpdateRequest.amount(), balanceUpdateRequest.updateType());
		Optional<Account> found;
		try {
			found = accountRepository.findByAccountNumber(accountNumber);
		}catch (Exception e) {
			LOGGER.error("Database error while fetching accountNumber={}", accountNumber, e);
			throw new DatabaseException(e.getMessage());
		}
		if(found.isEmpty()) {
			LOGGER.warn("No account found for accountNumber={}", accountNumber);
			throw new AccountNotFoundException("No account found for accountNumber= " + accountNumber);
		}
		Account account = found.get();
		double prevBalance = account.getBalance();
		if(balanceUpdateRequest.updateType().equals(UpdateType.WITHDRAW)) {
			if (balanceUpdateRequest.amount()>account.getBalance()) {
				LOGGER.warn("Insufficient balance for withdrawal. accountNumber={}, currentBalance={}, requested={}",accountNumber, account.getBalance(), balanceUpdateRequest.amount());
				throw new InsufficientBalanceException("Insufficient Balance in the account with account number " + accountNumber);
			}
			account.setBalance(account.getBalance()-balanceUpdateRequest.amount());
			LOGGER.debug("Withdrawal successful. OldBalance={}, NewBalance={}",prevBalance, account.getBalance());
		}else {
			account.setBalance(account.getBalance()+balanceUpdateRequest.amount());
			LOGGER.debug("Deposit successful. OldBalance={}, NewBalance={}",prevBalance, account.getBalance());
		}
		Account savedAccount;
		try {
			savedAccount = accountRepository.save(account);
		}catch (Exception e) {
			LOGGER.error("Database error while saving updated balance for accountNumber={}", accountNumber, e);
			throw new DatabaseException("Database error while saving updated balance for accountNumber= " + accountNumber);
		}
		LOGGER.info("Balance updated successfully for accountNumber={}", accountNumber);
		return savedAccount;
	}

	@Override
	public Account updateAccountStatus(String accountNumber,AccountStatusUpdateRequest accountStatusUpdateRequest) {
		Optional<Account> found;
		try {
			found = accountRepository.findByAccountNumber(accountNumber);
		}catch (Exception e) {
			LOGGER.error("Database Error while fetching the account details for account number {}",accountNumber,e);
			throw new DatabaseException(e.getMessage());
		}
		if(found.isEmpty()) {
			LOGGER.warn("No Account exist with account number {}",accountNumber);
			throw new AccountNotFoundException("No Account exist with account number " + accountNumber);
		}
		Account account = found.get();
		if(account.getStatus().equals(accountStatusUpdateRequest.status())) {
			LOGGER.error("The update status is same as current status for account number {}",accountNumber);
			throw new SameAccountStatusException("The update status is same as current status for account number " + accountNumber);
		}
		account.setStatus(accountStatusUpdateRequest.status());
		Account savedAccount;
		try {
			savedAccount = accountRepository.save(account);
		}catch (Exception e) {
			LOGGER.error("Database Error while saving the record after updating status of account number {}",accountNumber);
			throw new DatabaseException("Database Error while saving the record after status balance of account number " + accountNumber);
		}
		return savedAccount;
	}

}
